          "algorithm": "sha256"
        },
        "executionPolicy": "Bypass",
        "requiresElevation": true
      }
    }
  },
  "prerequisites": [
    {
      "name": "Windows 11",
      "description": "Must be running Windows 11 (build 22000 or later)",
      "check": "powershell",
      "command": "[System.Environment]::OSVersion.Version -ge [Version]'10.0.22000'"
    },
    {
      "name": "Administrator Rights",
      "description": "Must be running as Administrator",
      "check": "powershell",
      "command": "([Security.Principal.WindowsPrincipal][Security.Principal.WindowsIdentity]::GetCurrent()).IsInRole([Security.Principal.WindowsBuiltInRole]::Administrator)"
    },
    {
      "name": "Internet Connection",
      "description": "Internet connection required to download features",
      "check": "manual"
    }
  ],
