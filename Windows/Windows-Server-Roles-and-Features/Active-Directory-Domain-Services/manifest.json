    "maintainer": "admin@installrelay.com",
    "tags": ["windows-server", "active-directory", "domain-services", "roles"],
    "categories": ["Server Roles"]
  },
  "api_endpoints": {
    "manifest": "/api/manifest/windows/Windows-Server-Roles-and-Features/Active-Directory-Domain-Services/manifest.json",
    "verify": "/api/verify/apps/windows/Windows-Server-Roles-and-Features/Active-Directory-Directory-Services"
  }
}

